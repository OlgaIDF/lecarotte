{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}

<div class="container-fluid">
  

                <div class="row">
                    <div class="col-10 offset-1 text-center py-3">
            
            <h1 class="pt-3 text-center">Connexion</h1>
            <hr class="pb-3">
                </div>
             </div>  
           <div class="row">    
        <div class="col-5 connexion"></div>
            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
        
                {% if app.user %}
                    <div class="mb-3 alert alert-success text-center">
                        Vous &ecirc;tes connect&eacute; avec l'identifiant {{ app.user.username }} (<a href="{{ path('app_logout') }}" class="text-danger">d&eacute;connexion</a>).
                    </div>
                {% endif %}
         </div>
                    <div class="row justify-content-center">
                        <div class="col-5 inscription">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control my-3" required>
        
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
        
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
        
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
        
                <button type="submit" id="form-submit" class="btn btn-lg text-center mt-3 float-right">Connexion</button>
            </form>
           
        </div>

    </div>
    <div class="row">
        <div class="col-12 text-center py-3 connexion">
         <p><a href="{{ path('app_register') }}">Cr√©er un compte</a> pour obtenir plus d'options</p>

        </div>
    </div>
</div>
</div>

{% endblock %}