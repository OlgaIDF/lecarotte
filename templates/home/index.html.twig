</section>
<!-- Actus -->
<section class="section2" id="actus">
  <div class="container-fluid">
    <div class="row">
      <div class="offset-sm-2 col-sm-8">
        <div class="headerText text-center">
          <h2>Actus</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="post py-2 mx-5" >
        <div class="row no-gutters">
          {% for article in articles %}
          <div class="col-md-4 pt-5 px-4">
            <img src="{{ asset('img/articles/' ~ article.img) }}"  width="400" class="img-fluid" alt="...">

          </div>
          <div class="col-md-8 actus">
            <div class="actus-body">
              <div class="actus-data text-muted py-3">{{ article.createdat|date("d M Y") }}</div>
              <h5 class="actus-title">{{article.titre}}</h5>
              <div class="actus-excerpt text-justify">{{article.contenu}}</div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Notre carte-->
<section class="section3" id="menus">
  <div class="container-fluid">
    <div class="row">
      <div class="offset-sm-2 col-sm-8">
        <div class="headerText text-center">
          <h2>Notre carte</h2>
        </div>
      </div>
    </div>
    <div class="cardcarte row mx-5">
      <div class="col-12 sectionText ">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="bols-tab" data-toggle="tab" href="#bols" role="tab" aria-controls="bols"
              aria-selected="true">Bols</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="dessert-tab" data-toggle="tab" href="#dessert" role="tab" aria-controls="dessert"
              aria-selected="false">Bols desserts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="boissons-tab" data-toggle="tab" href="#boissons" role="tab" aria-controls="boissons"
              aria-selected="false">Boissons</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- Notre carte - bols-->
          <div class="tab-pane fade show active" id="bols" role="tabpanel" aria-labelledby="bols-tab">
            <div class="row cards text-center">

              {% for menu in carte %}
              {% if  menu.categorie  == 'Bols' %}
              <div class="col-xl-4 col-lg-6 p-2">
                <div class="card m-2">
                  <img src="{{ asset('img/carte/' ~ menu.img) }}" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h6 class="card-title">{{menu.titre}}</h6>
                    <p class="card-text text-muted text-left">{{menu.ingredients}}</p>
                    <p class="card-prix text-right">{{ menu.prix }} €</p>
                  </div>
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>

          </div>
          <!-- Notre carte _dessert-->
          <div class="tab-pane fade mt-3" id="dessert" role="tabpanel" aria-labelledby="dessert-tab">
            <div class="row cards text-center">

              {% for menu in carte %}
              {% if  menu.categorie  == 'Bols desserts' %}
              <div class="col-xl-4 col-lg-6 p-2">
                <div class="card m-2">
                  <img src="{{ asset('img/carte/' ~ menu.img) }}" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h6 class="card-title">{{menu.titre}}</h6>
                    <p class="card-text text-muted text-left">{{menu.ingredients}}</p>
                    <p class="card-prix text-right">{{ menu.prix }} €</p>
                  </div>
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>

          </div>
          <!-- Notre carte - boissons-->
          <div class="tab-pane fade mt-3" id="boissons" role="tabpanel" aria-labelledby="boissons-tab">
            <div class="row cards text-center">

              {% for menu in carte %}
              {% if  menu.categorie  == 'Boissons' %}
              <div class="col-xl-4 col-lg-6 p-2">
                <div class="card m-2">
                  <img src="{{ asset('img/carte/' ~ menu.img) }}" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h6 class="card-title">{{menu.titre}}</h6>
                    <p class="card-text text-muted text-left">{{menu.ingredients}}</p>
                    <p class="card-prix text-right">{{ menu.prix }} €</p>
                  </div>
                </div>
              </div>
              {% endif %}
              {% endfor %}
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>

<!-- Contact-->
<section class="section4 mb-5" id="contact">
  <div class="container-fluid">
    <div class="row">
      <div class="offset-sm-2 col-sm-8">
        <div class="headerText text-center">
          <h2>Contact</h2>
        </div>
      </div>
    </div>
    <div class="row mx-5">
      <!-- Formulaire-->
      <div class="form-group col-md-6 col-sm-12 sectionText formulaire ">

        <label for="name" class="h4">Nom</label>
        <input type="text" class="form-control" id="name">


        <label for="email" class="h4">Email</label>
        <input type="email" class="form-control" id="email">

        <label for="message" class="h4 ">Message</label>
        <textarea id="message" class="form-control" rows="4"></textarea>
        <br />
        <input class="form-check-input" type="checkbox" name="rgpd" value="1" id="">

        <label class="form-check-label" for="defaultCheck1"><sup>* </sup> En cochant cette case et en soumettant ce
          formulaire, j'accepte que mes données personnelles soient utilisées pour me recontacter dans le cadre de ma
          demande indiquée dans ce formulaire. Aucun autre traitement ne sera effectué avec mes informations.</label>

        <button type="submit" id="form-submit" class="btn btn-lg text-center mt-3 float-right">Envoyer</button>
      </div>
      <!-- Coordonnes-->
      <div class="col-md-6 col-sm-12">
<div class="row">
  <div class="col-12 pl-5">
        <div class="coordonnes">
          <p><i class="fas fa-map-marker-alt mr-2 mb-0"></i> 41, rue Michel Ange, Courcouronnes 91080 </p>
          <p><i class="fas fa-phone-square-alt mr-2"></i> 69 47 45 90</p>

          <p><i class="fas fa-envelope mr-2"></i> salut@la-carotte.fr</p>
        </div>
        </div>
        </div>
        <div class="row">
        <div class="col-12 text-center ">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10548.927447717815!2d2.42306!3d48.624545!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e5de11d161037b%3A0x3737c44097f010df!2s41%20Rue%20Michel%20Ange%2C%2091080%20%C3%89vry-Courcouronnes!5e0!3m2!1sen!2sfr!4v1603577958705!5m2!1sen!2sfr"
            width="600" height="420" frameborder="0" style="border:0; margin-top:2rem;" allowfullscreen=""
            aria-hidden="false" tabindex="0" ></iframe>
        </div>
</div>
      </div>
    </div>
  </div>
</section>
{% endblock %}